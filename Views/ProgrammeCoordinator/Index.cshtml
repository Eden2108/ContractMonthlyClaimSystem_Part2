@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

<div class="container mt-4">
    <h2 class="mb-3 text-center">Coordinator Review</h2>
    <p class="text-muted text-center">Review and verify pending claims from lecturers.</p>

    <table class="table table-striped table-purple-aqua">
        <thead>
            <tr>
                <th>ID</th>
                <th>Module</th>
                <th>Faculty</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Sessions</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.claimID</td>
                    <td>@claim.module_name</td>
                    <td>@claim.faculty_name</td>
                    <td>@claim.number_of_hours</td>
                    <td>@claim.amount_of_rate</td>
                    <td>@claim.number_of_sessions</td>
                    <td>@claim.claim_status</td>
                    <td>
                        <form asp-action="Approve" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.claimID" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form asp-action="Reject" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.claimID" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
