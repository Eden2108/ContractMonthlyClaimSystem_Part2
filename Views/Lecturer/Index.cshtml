@model ContractMonthlyClaimSystem.Models.Claim

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header text-white" style="background: linear-gradient(90deg, #72427D, #4A9C8D);">
            <h3 class="mb-0">Lecturer Claim Submission</h3>
        </div> <div class="card-body">

            <form asp-action="SubmitClaim" method="post">
                <div class="form-group mb-3">

                    <!--Number of sessions-->
                    <label>Number of Sessions</label>
                    <input asp-for="number_of_sessions" class="form-control" required />
                </div>

                <!--Number of hours worked-->
                <div class="form-group mb-3">
                    <label>Number of Hours</label>
                    <input asp-for="number_of_hours" class="form-control" required />
                </div>

                <!--Hourly rates-->
                <div class="form-group mb-3">
                    <label>Hourly Rate</label>
                    <input asp-for="amount_of_rate" class="form-control" required />
                </div>

                <!--Module name-->
                <div class="form-group mb-3">
                    <label for="module" class="form-label fw-bold">Module</label>
                    <select class="form-select" id="module" name="module" required>
                        <option value="">-- Select Module --</option>
                        <option value="Programming 1A">Programming 1A</option>
                        <option value="Programming 1B">Programming 1B</option>
                        <option value="Databases">Databases</option>
                        <option value="Networks">Networks</option>
                        <option value="Information Security">Information Security</option>
                    </select>
                </div>

                <!--Faculty-->
                <div class="form-group mb-3">
                    <label for="faculty" class="form-label fw-bold">Faculty</label>
                    <select class="form-select" id="faculty" name="faculty" required>
                        <option value="">-- Select Faculty --</option>
                        <option value="Science & Technology">Science & Technology</option>
                        <option value="Business & Management">Business & Management</option>
                        <option value="Humanities">Humanities</option>
                        <option value="Education">Education</option>
                    </select>
                </div>

                <!--Suporting docs(.pdf, .docx, and .xlsx.)-->
                <div class="form-group mb-3">
                    <label>Supporting Document</label>
                    <input asp-for="supporting_documents" type="file" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit Claim</button>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">@ViewBag.Message</div>
            }
        </div>
    </div>
</div>